
<html>
  <head>
    <meta charset="utf-8">
    <title>Parcel Price Checker!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ParcelCheck.Models;

    <h1>Parcel Price Check</h1>

    @if (Model.Count == 0)
    {
      <p>There are no items in the list.</p>
    }
    <ul>
      @foreach (Parcel parcel in Model)
      {
        <li>Volume: @parcel.Volume()</li>
        <li>Weight: @parcel.Weight() Lbs</li>
        <li>Cost to Ship: $@parcel.Cost()</li>
      }
    </ul>
    <a href="/parcels/new">Add a new item.</a>

    <form action="/parcels/delete" method="post">
      <button type="submit" name="button">Clear All Items</button>
    </form>

  </body>
</html>